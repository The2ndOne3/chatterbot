@font-face
  font-family: 'ubuntu_mono';
  src: url('fonts/ubuntumono-r-webfont.eot');
  src: url('fonts/ubuntumono-r-webfont.eot?#iefix') format('embedded-opentype'),
       url('fonts/ubuntumono-r-webfont.woff') format('woff'),
       url('fonts/ubuntumono-r-webfont.ttf') format('truetype'),
       url('fonts/ubuntumono-r-webfont.svg#ubuntu_monoregular') format('svg');
  font-weight: normal;
  font-style: normal;

@font-face
  font-family: 'ubuntu_mono';
  src: url('fonts/ubuntumono-b-webfont.eot');
  src: url('fonts/ubuntumono-b-webfont.eot?#iefix') format('embedded-opentype'),
       url('fonts/ubuntumono-b-webfont.woff') format('woff'),
       url('fonts/ubuntumono-b-webfont.ttf') format('truetype'),
       url('fonts/ubuntumono-b-webfont.svg#ubuntu_monobold') format('svg');
  font-weight: bold;
  font-style: normal;

body
  font-family: 'ubuntu_mono', sans-serif
  background: #6496c4

h1, h2, h3, h4, h5, h6
  font-family: 'ubuntu_mono', sans-serif
  color: #fff6db

p, li
  color: #fff

a
  color: #305792

  &:hover, &:focus
    color: #333

.main-image
  float: right
  margin: 25px 0 0 15px

.row
  max-width: 51.875rem

.header-wrapper
  background: #fff6db
  padding: 30px 0 100px 0
  border-bottom: 8px solid #666

  .controls
    margin-top: 70px

    .icon
      float: right
      width: 32px
      font-size: 32px
      margin-right: 6px
      color: #444

      &:hover
        color: #222

      &.off
        color: #b75f5f

#chatbox
  height: 400px
  overflow-y: auto
  padding: 12px
  border: 8px solid #666
  background: #fff
  position: relative
  top: -80px

  &::-webkit-scrollbar
    width: 12px

  &::-webkit-scrollbar-track
    background: #e9e9e9

  &::-webkit-scrollbar-thumb
    background: #bbb

  #prompt
    position: absolute
    width: 380px
    top: 50%
    left: 50%
    margin: -18px 0 0 -190px
    text-align: center

  #chatarea
    position: relative
    display: flex
    flex-direction: column
    justify-content: flex-end
    min-height: 100%
    padding-bottom: 16px

    .message
      margin-bottom: 10px
      line-height: 1.2

      &.bot
        color: #4c84b8

    #status
      position: absolute
      bottom: 0
      font-style: italic
      color: #777

hr
  border-color: #4d84b8

footer p
  color: #3b5ba0
  font-size: 0.875rem

  a
    color: inherit
    text-decoration: underline

    &:hover, &:focus
      color: #333