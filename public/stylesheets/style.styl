html
  height: 100%

body
  height: 100%
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

header
  height: 25%

#record
  font-size: 32px

#main
  height: 75%

  .columns
    height: 100%

    #chatbox
      height: 100%
      max-height: 400px
      overflow-y: auto
      padding: 12px
      border: 1px solid #ccc

      &::-webkit-scrollbar
        width: 12px

      &::-webkit-scrollbar-track
        background: #e9e9e9

      &::-webkit-scrollbar-thumb
        background: #ccc

      #chatarea
        display: flex
        flex-direction: column
        justify-content: flex-end
        min-height: 100%

        div
          margin-bottom: 6px